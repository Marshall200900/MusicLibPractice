@model IEnumerable<MusicLibPractice.Models.paths>

@{
    ViewBag.Title = "Директории";
}

<h2>Directories</h2>

<button type="button" style="margin: 0px 0px 20px;" href="@Url.Action("Create", "paths")" class="btn btn-info">Create</button>

<table class="table table-striped">
    <tr class="info">
        <th>
            @Html.DisplayNameFor(model => model.path_name)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.path_name)
        </td>
        <td align="right">
            <a type="button" href="@Url.Action("Edit", new { id = item.path_id })" class="btn btn-info">
                <span class="glyphicon glyphicon-pencil"></span>
            </a>

            <a type="button" href="@Url.Action("Delete", new { id = item.path_id })" class="btn btn-danger">
                <span class="glyphicon glyphicon-trash"></span>
            </a>
        </td>
    </tr>
    }

</table>
